<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            android:id="@+id/linearLayout"
            tools:ignore="MissingConstraints">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"

                android:background="#CCCCCC"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"

                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado Del Reporte: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/viewestado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clave del Reporte:  "
                    android:orientation="vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/viewclave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Modificacion: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/viewFechamodif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_height="4dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X.Tratamiento(Anexo I) "
                android:textStyle="bold"
                android:textSize="22sp"

                />


        </LinearLayout>
        <!-- Group Nivel de Conciencia-->

        <!-- Group Control Cervical-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            >



            <!-- Segundo LinearLayout (al lado del primero) -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control Cervical:"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >

                        <GridLayout
                            android:id="@+id/gridLayoutPiel"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:columnCount="1"
                            android:rowCount="3">>

                            <RadioButton
                                android:id="@+id/radValvulaMascarilla"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balon-Valvula-Mascarilla"
                                />



                            <RadioButton
                                android:id="@+id/radValvuladeDemanda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valvula de Demanda" />

                            <RadioButton
                                android:id="@+id/radVentiladorAutomatico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ventilador Automatico" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"

                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Frec"
                                   android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:textSize="18sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="90dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/viewFrec"
                                    android:layout_marginTop="5dp"
                                    style="@style/CustomSpinnerStyle">

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vol"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="18sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="90dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/viewVol"
                                    android:layout_marginTop="5dp"
                                    style="@style/CustomSpinnerStyle">

                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <!-- Agrega más botones de opción aquí si es necesario -->
                        </GridLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Group Oxigenoterapia-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            >



            <!-- Segundo LinearLayout (al lado del primero) -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control Cervical:"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >

                        <GridLayout
                            android:id="@+id/gridLayoutPiel"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:columnCount="1"
                            android:rowCount="3">>

                            <RadioButton
                                android:id="@+id/radPuntasNasales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Puntas Nasales"
                                />



                            <RadioButton
                                android:id="@+id/radMascarillaSimple"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mascarilla Simple" />

                            <RadioButton
                                android:id="@+id/radMascarillaReservorio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mascarilla Con Reservorio" />

                            <RadioButton
                                android:id="@+id/radMascarillaVenturi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mascarilla Venturi" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
android:layout_gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lts x Min"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:textSize="18sp" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="130dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/viewLtsMin"
                                    android:layout_marginTop="5dp"
                                    style="@style/CustomSpinnerStyle">

                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>

                            <!-- Agrega más botones de opción aquí si es necesario -->
                        </GridLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!-- Botones-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRegresar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:backgroundTint="#FB20B5B2"
                android:src="@drawable/baseline_arrow_back_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabGuardar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_gravity="center"

                android:layout_marginLeft="110dp"
                android:clickable="true"
                android:backgroundTint="#FB20B5B2"
                android:src="@drawable/baseline_save_24" />

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>