<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            android:id="@+id/linearLayout"
            tools:ignore="MissingConstraints">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"

                android:background="#CCCCCC"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"

                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado Del Reporte: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/viewestado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clave del Reporte:  "
                    android:orientation="vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/viewclave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Modificacion: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/viewFechamodif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_height="4dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VI.Causa Clinica "
                android:textStyle="bold"
                android:textSize="22sp"

                />


        </LinearLayout>

        <!-- Origen Probable-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            >



            <!-- Segundo LinearLayout (al lado del primero) -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Origen Probable:"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >

                        <GridLayout
                            android:id="@+id/gridLayout"
                            android:layout_marginTop="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:columnCount="2"
                            android:rowCount="3">>

                            <RadioButton
                                android:id="@+id/radNeurologia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Neurologia"
                                />

                            <RadioButton
                                android:id="@+id/radUrogenital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Urogenital" />

                            <RadioButton
                                android:id="@+id/radCardiovascular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cardiovascular" />

                            <RadioButton
                                android:id="@+id/radDigestiva"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_height="wrap_content"
                                android:text="Digestiva" />

                            <RadioButton
                                android:id="@+id/radRespiratorio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Respiratorio" />

                            <RadioButton
                                android:id="@+id/radInfecciosa"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_height="wrap_content"
                                android:text="Infecciosa" />

                            <RadioButton
                                android:id="@+id/radMetabolico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Metabolico" />

                            <RadioButton
                                android:id="@+id/radOncologico"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_height="wrap_content"
                                android:text="Oncologico" />
                            <RadioButton
                                android:id="@+id/radCognitivoEmocional"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cognitivo Emocional" />

                            <RadioButton
                                android:id="@+id/radMusculoEsqueletico"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_height="wrap_content"
                                android:text="Musculo Esqueletico" />
                            <RadioButton
                                android:id="@+id/radGinecoobtetrica"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GinecoObstetrica" />

                            <RadioButton
                                android:id="@+id/radOtro"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_height="wrap_content"
                                android:text="Otro" />



                            <!-- Agrega más botones de opción aquí si es necesario -->
                        </GridLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1ra Vez: "

                android:textSize="22sp"
                android:layout_gravity="center_vertical"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            >
            <Spinner
                android:id="@+id/Spiner1raVez"
                android:layout_width="0dp"
                style="@style/CustomSpinnerStyle"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subsecuente: "

                android:textSize="22sp"

                android:layout_gravity="center_vertical"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            >

            <Spinner
                android:id="@+id/SpinerSubsecuente"
                android:layout_width="0dp"
                android:hint="Selecciona Asignación"
                style="@style/CustomSpinnerStyle"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="4dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRegresar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:backgroundTint="#FB20B5B2"
                android:src="@drawable/baseline_arrow_back_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabGuardar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_gravity="center"

                android:layout_marginLeft="110dp"
                android:clickable="true"
                android:backgroundTint="#FB20B5B2"
                android:src="@drawable/baseline_save_24" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#CCCCCC" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>